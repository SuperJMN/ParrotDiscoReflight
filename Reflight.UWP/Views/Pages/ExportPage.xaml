<Page
    x:Class="ParrotDiscoReflight.Views.Pages.ExportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:ParrotDiscoReflight.Views"
    xmlns:viewModels="using:ParrotDiscoReflight.ViewModels"
    RequestedTheme="Dark"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DataContext="{d:DesignInstance viewModels:ExportViewModel}">
    <Grid>
        <ContentControl VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" x:Name="RenderControl" Width="1920" Height="1080">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition ></RowDefinition>
                </Grid.RowDefinitions>
                <views:BatteryControl Width="32" VerticalAlignment="Top" Margin="8" HorizontalAlignment="Left" />
                <views:StatusControl Grid.Row="1" VerticalAlignment="Bottom" />
            </Grid>
        </ContentControl>
        <ProgressRing VerticalAlignment="Center" HorizontalAlignment="Center" IsActive="{Binding IsBusy}" Height="100" Width="100" Foreground="Red" />
    </Grid>
</Page>
