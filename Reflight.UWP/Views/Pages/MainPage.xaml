<Page
    x:Class="ParrotDiscoReflight.Views.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels1="using:ParrotDiscoReflight.ViewModels"
    xmlns:views="using:ParrotDiscoReflight.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DataContext="{d:DesignInstance viewModels1:MainViewModel}">

    <Frame>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <views:SimulationUnitSelectorControl Margin="30" />
            <Button Margin="10" Padding="6" VerticalAlignment="Top" HorizontalAlignment="Right"
                    Command="{Binding GoToSettingsCommand}">
                <Button.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition  />
                        </Grid.ColumnDefinitions>
                        <SymbolIcon Symbol="Setting" />
                        <TextBlock Margin="10,0" VerticalAlignment="Center" Grid.Column="1" Text="Settings" />
                    </Grid>
                </Button.Content>
            </Button>
            <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="10">
                <Button Command="{Binding RunCommand}" ToolTipService.ToolTip="Play the flight!" Height="100"
                        Width="100">
                    <Image Source="/Assets/play.svg" />
                </Button>
                <!--<Button Command="{Binding ExportVideoCommand}" Width="100" Height="100">
                    <Image  Source="Assets/export.svg" />
                </Button>-->
            </StackPanel>
        </Grid>

    </Frame>
</Page>